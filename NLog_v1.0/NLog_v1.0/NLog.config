<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Trace" internalLogFile="c:\temp\nlog-internal.log">
  <variable name="myvar" value="myvalue"/>
  <targets>
    <target name="errorlog" xsi:type="File" fileName="error.txt"/>
    <target name="debuglog" xsi:type="File" fileName="debug.txt"/>
  </targets>
  <rules>
    <!--this * means which class logs have to be in the log files--> 
    <logger name="*" level="Error" writeTo="errorlog" />
    <logger name="*" level="Debug" writeTo="debuglog" />
  </rules>
</nlog>
